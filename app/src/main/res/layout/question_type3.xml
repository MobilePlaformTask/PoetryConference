<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/poem01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3393e7">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/returnn"
            android:layout_gravity="center_vertical"
            android:onClick="giveup"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1/10"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="130dp"
            android:id="@id/txtNumber"/>
        <TextView
            android:id="@id/stateprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0:59"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="110dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">


        <ProgressBar
            android:id="@id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@id/txtQuestionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点字成诗"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"/>

            </LinearLayout>

        <GridLayout
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="40dp"
            android:columnCount="4"
            android:rowCount="3">

            <Button
                android:id="@+id/Word1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Word2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Word3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Word4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Word5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Word6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Word7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Word8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Word9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />
            <Button
                android:id="@+id/Word10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />
            <Button
                android:id="@+id/Word11"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />
            <Button
                android:id="@+id/Word12"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

        </GridLayout>

        <EditText
            android:id="@+id/txtQuestionAnswer3"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:visibility="invisible"
            android:hint="组合诗句" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Ans1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Ans2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Ans3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Ans4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/Ans5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />
            <Button
                android:id="@+id/Ans6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />
            <Button
                android:id="@+id/Ans7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

        </LinearLayout>

        <Button
            android:id="@+id/btnCancelAns3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelWord3"
            android:text="删除"
            android:textColor="#3393e7"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttonstyle"/>


    </LinearLayout>

</LinearLayout>

