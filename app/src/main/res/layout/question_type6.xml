<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3393e7">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/returnn"
            android:layout_gravity="center_vertical"
            android:onClick="giveup"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@id/txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1/10"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="130dp"/>
        <TextView
            android:id="@id/stateprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0:59"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="110dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">


        <ProgressBar
            android:id="@id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@id/txtQuestionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点字成诗"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>
        <GridLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="40dp"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/btnWord1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnWord2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnWord3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnWord4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnWord5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnWord6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnWord7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnWord8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnWord9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/border" />

        </GridLayout>

        <EditText
            android:id="@+id/txtQuestionAnswer6"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:hint="组合诗句"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAns1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnAns2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnAns3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnAns4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btnAns5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border" />

        </LinearLayout>

        <Button
            android:id="@+id/btnCancelAns6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelWord"
            android:text="删除"
            android:textColor="#3393e7"
            android:background="@drawable/buttonstyle"
            android:layout_marginTop="8dp"/>


    </LinearLayout>

</LinearLayout>

